# Firebase Admin SDK credentials
# Get these from: Firebase Console → Project Settings → Service accounts → Generate new private key
FIREBASE_PROJECT_ID=app-splitex
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@app-splitex.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=app-splitex.firebasestorage.app
FIREBASE_WEB_API_KEY=your-web-api-key

# Server
PORT=3001

# Email-link auth settings
AUTH_EMAIL_LINK_CONTINUE_URL=https://staging.splitex.app/auth/email-link
AUTH_ANDROID_PACKAGE_NAME=com.splitex.app
AUTH_ANDROID_MIN_VERSION=1
AUTH_IOS_BUNDLE_ID=com.splitex.app
